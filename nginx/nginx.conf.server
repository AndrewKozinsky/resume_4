events {}

http {
    include mime.types;

    server {
        listen 80;
        listen 443;
        server_name explainit.ru www.explainit.ru;

        location / {
            proxy_pass http://face:3000;
        }

        location /api {
            proxy_pass http://api:3001;
            rewrite ^/api/(.*)$ $1 last;
        }

        location /nginx-test {
            return 200 'Hello from test';
        }
    }
}