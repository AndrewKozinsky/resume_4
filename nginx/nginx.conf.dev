events {}

http {
    include mime.types;

    server {
        listen 80;
        server_name explain.local;

        location / {
            proxy_pass http://face:3000;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }

        location /api {
            proxy_pass http://api:3001;
            #rewrite ^/api/(.*)$ $1 last;
        }

        location /nginx-test {
            return 200 'Hello from test';
        }
    }
}